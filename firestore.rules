rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to users collection for demonstration
    match /users/{userId} {
      allow read: if true;
      allow create: if true; // Allow anyone to create a user for now
      allow write: if false; 
    }
  }
}
